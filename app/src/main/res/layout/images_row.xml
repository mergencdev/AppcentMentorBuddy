<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="250dp"
    android:layout_margin="25dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRow"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/myGrey"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/galleryLinearLayout"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewRow"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/recyclerview_row_imageview"
                android:src="@drawable/image_gallery" />

            <TextView
                android:id="@+id/textViewTitleRow"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed-medium">

            </TextView>

            <TextView
                android:id="@+id/textViewDescriptionRow"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="15sp">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</GridLayout>